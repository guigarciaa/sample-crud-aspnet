{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/app/src/SampleCrud.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/app/src/SampleCrud.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/app/src/SampleCrud.sln"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "type": "docker-build",
      "label": "docker-build: debug",
      "dependsOn": ["build"],
      "dockerBuild": {
        "tag": "samplecrudaspnet:dev",
        "target": "base",
        "dockerfile": "${workspaceFolder}/app/src/Dockerfile",
        "context": "${workspaceFolder}/app/src",
        "pull": true
      },
      "netCore": {
        "appProject": "${workspaceFolder}/app/src/SampleCrud.API/SampleCrud.API.csproj",
        "enableDebugging": true
      },
    },
    {
      "type": "docker-run",
      "label": "docker-run: debug",
      "dependsOn": ["docker-build: debug"],
      "dockerRun": {
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development",
          "DBHOST": "Server=sample_crud_app_db;Port=5432;Database=sample_crud_db;Username=admin;Password=postgres",
          "ELASTICSEARCH_URL": "http://localhost:9200",
          "REDIS": "redis:6379, abortConnect=false",
        }
      },
      "netCore": {
        "appProject": "${workspaceFolder}/app/src/SampleCrud.API/SampleCrud.API.csproj",
        "enableDebugging": true
      }
    }
  ]
}
